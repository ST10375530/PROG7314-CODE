<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.PetStores.PetStoresActivity">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header_pet_store"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@color/light_blue_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageView
            android:id="@+id/pet_stores_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="back"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/pet_stores_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header_pet_store"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Greeting -->
            <TextView
                android:id="@+id/stores_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, How may I help you ?"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"/>

            <!-- Category Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Veterinary -->
                <LinearLayout
                    android:id="@+id/vet_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_vet_clinic"
                        android:padding="5dp"
                        app:tint="@color/black"
                        android:background="@drawable/rounded_card2"
                        android:backgroundTint="@color/new_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Veterinary"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <!-- Parks -->
                <LinearLayout
                    android:id="@+id/store_parks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_park"
                        app:tint="@color/gray_text"
                        android:padding="7dp"
                        android:background="@drawable/rounded_card2"
                        android:backgroundTint="@color/new_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Parks"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <!-- Pet Stores -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/store_pets"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_pet_store"
                        app:tint="@color/gray_text"
                        android:padding="6dp"
                        android:background="@drawable/rounded_card2"
                        android:backgroundTint="@color/yellow_accent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pet Stores"
                        android:textColor="@color/yellow_accent"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>
            <!-- Nearby Veterinarian Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nearby Pet Stores"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/light_blue_main"/>
            </LinearLayout>

            <!-- Example Nearby Vet Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/new_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Left Image -->
                    <ImageView
                        android:id="@+id/imgService"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center"/>

                    <!-- Right Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tails of the City"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/imgStarsNP1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsNP2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsNP3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsNP4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsNP5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                android:layout_marginEnd="6dp"
                                app:tint="@color/yellow_mood" />

                            <TextView
                                android:id="@+id/txtRatingValueNP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0 {100 reviews}"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <!-- Status, Distance, Price Row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN"
                                android:textColor="@color/light_blue_main"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <ImageView
                                android:id="@+id/imgLocationNP"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/txtDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5 km"
                                android:textColor="@color/gray_text"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R100"
                                android:textColor="@color/gray_text" />
                        </LinearLayout>

                        <!-- Timings -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:id="@+id/imgClockNP"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_times"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/txtNNTimings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monday - Friday at 8.00 am - 5.00 pm"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="6dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recommended Veterinarian Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Recommended Pet Stores"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/light_blue_main"/>
            </LinearLayout>

            <!-- Example Recommended Vet Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/new_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Left Image -->
                    <ImageView
                        android:id="@+id/imgService2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center"/>

                    <!-- Right Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/txtTitleStore2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver Paw Lounge"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/imgStarsRP1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsRP2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsRP3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsRP4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                app:tint="@color/yellow_mood" />

                            <ImageView
                                android:id="@+id/imgStarsRP5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_full_star"
                                android:layout_marginEnd="6dp"
                                app:tint="@color/yellow_mood" />

                            <TextView
                                android:id="@+id/txtRatingValueRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0 {100 reviews}"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <!-- Status, Distance, Price Row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/txtStatusRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN"
                                android:textColor="@color/light_blue_main"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <ImageView
                                android:id="@+id/imgLocationNV"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/txtDistanceRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5 km"
                                android:textColor="@color/gray_text"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:id="@+id/txtPriceRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R100"
                                android:textColor="@color/gray_text" />
                        </LinearLayout>

                        <!-- Timings -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:id="@+id/imgClockRP"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_times"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/txtTimingsRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monday - Friday at 8.00 am - 5.00 pm"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="6dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar-->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/homeNavItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/home"
                android:src="@drawable/ic_home"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/nav_item"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/discover"
                android:src="@drawable/ic_compass"
                app:tint="@color/yellow_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/discover"
                android:textColor="@color/yellow_accent"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/explore"
                android:src="@drawable/ic_map_marker"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/explore"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:contentDescription="@string/health_icon"
                android:src="@drawable/baseline_health_and_safety_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/health_icon"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_nav_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/ic_user"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
