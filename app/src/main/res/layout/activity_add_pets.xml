<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    tools:context=".UI.AddPets.AddPetsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners2"
        android:clipToOutline="true"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_pet_header"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/rounded_top_corners"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/add_pet_back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:contentDescription="@string/back_button"
                android:focusable="true"
                android:src="@drawable/ic_chevron_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/add_new_pet"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Scrollable Content Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pet_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Added Pets Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added Pets"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Pets List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtBella"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_card"
                        android:drawableStart="@drawable/dog1"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="       Bella"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRoudy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_card"
                        android:drawableStart="@drawable/dog2"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="          Roudy"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtFurry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_card"
                        android:drawableStart="@drawable/dog3"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Furry"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Manually Add Pet Section -->

                <TextView
                    android:id="@+id/lblManuallyAddPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Manually Add Pet"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Form Elements (Editable) -->
                    <EditText
                        android:id="@+id/addPetName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Name"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/addPetType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Type"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/addPetAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Age"
                        android:inputType="number"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/addPetColour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Colour"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/addPetHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Height"
                        android:inputType="number|numberDecimal"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/addPetWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pet Weight"
                        android:inputType="number|numberDecimal"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/save_pet_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Pet"
                        android:backgroundTint="@color/light_blue_main"
                        android:padding="16dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:cornerRadius="999dp"
                        android:elevation="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

